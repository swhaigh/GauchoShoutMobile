<?xml version="1.0" encoding="utf-8"?>
<com.gauchoshout.android.util.VerticalScrollview 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" >

	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical" >
		
		<LinearLayout
			android:background="@drawable/background2"
			android:id="@+id/linearLayout2"
			android:layout_width="fill_parent"
			android:layout_height="30dp"
			android:layout_gravity="bottom"
			android:orientation="horizontal" >
			
		  <Button 
		   android:text="Chill" 
		   android:layout_height="23dp"
		   android:layout_weight=".5"
		   android:textSize="15sp"
		   android:textColor="#ffffff"
		   android:background="@color/button_color"
		   android:layout_width="wrap_content" 
		   android:id="@+id/chill_button" 
		   android:layout_gravity="center"/>



			<Button 
			android:text="Not Chill" 
			android:layout_weight=".5"
			android:layout_height="23dp"
			android:background="@color/red"
			android:textSize="15sp"
			android:textColor="#ffffff"
			android:layout_width="wrap_content"
			android:id="@+id/not_chill_button" 
			android:layout_gravity="center" />

			
		</LinearLayout>
		
	  <RelativeLayout 
		android:background="@color/bright"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="0dp"
		android:paddingRight="0dp" >

		
			<ImageView 
				android:id="@+id/user_pic"
				android:src="@drawable/anon"
				android:contentDescription="@string/desc"
				android:layout_height="70dp"
				android:layout_width="70dp" />
			
			<TextView 
				android:id="@+id/username"
				android:textColor="@color/white"
				android:layout_toRightOf="@id/user_pic"
				android:textSize="10sp"
				android:text="TheLukeSkywalker"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
			
			<TextView 
				android:id="@+id/user_desc"
				android:textColor="@color/white"
				android:layout_below="@id/username"
				android:layout_toRightOf="@id/user_pic"
				android:textSize="10sp"
				android:text="Jedi Knight -- Son of Darth Vader"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" />
			
			<TextView
				android:id="@+id/post_title"
				android:layout_width="wrap_content"
				android:layout_height="75dp"
				android:layout_below="@+id/user_desc"
				android:layout_toRightOf="@id/user_pic"
				android:text="This is a sample post"
				android:textSize="20sp" 
				android:textColor="@color/black"/>
			
			<ImageView 
				android:id="@+id/line_separator"
				android:background="@drawable/background2"
				android:contentDescription="@string/desc"
				android:src="@drawable/background2"
				android:layout_below="@id/post_title"
				android:layout_width="fill_parent"
				android:layout_height="5dp"/>
			
			<TextView
				android:id="@+id/post_body"
				android:textColor="@color/black"
				android:layout_below="@id/line_separator"
				android:textSize="14sp"
				android:text=" Once upon time. A few mistakes ago. I was in your sights.
	You got me alone .You found me You found me You bound me"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			
			<ImageView 
				android:id="@+id/line_separator2"
				android:background="@drawable/background2"
				android:contentDescription="@string/desc"
				android:src="@drawable/background2"
				android:layout_below="@id/post_body"
				android:layout_width="fill_parent"
				android:layout_height="5dp"/>
			
			  
			
			
				
		</RelativeLayout>
			
			
			<LinearLayout 
				android:layout_height="fill_parent"
				android:background="@color/dark"
				android:layout_width="fill_parent"
				android:orientation="vertical">
			
			<TextView
				android:id="@+id/comments_text"
				android:textStyle="bold"
				android:textColor="@color/white"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="COMMENTS"
				android:textSize="15sp" />
			
			<ListView
			    android:id="@+id/comments_list"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent" />
		  
			</LinearLayout>
			

	  

	</LinearLayout>
</com.gauchoshout.android.util.VerticalScrollview>
