<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gauchoshout.android"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/gs"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock" >
        
       <activity android:name=".ui.LoginActivity"
            android:theme="@style/Theme.Sherlock.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".ui.HomeActivity" 
            	  android:screenOrientation="portrait"
            	  android:label="@string/app_name">
        </activity>
        
        <activity android:name=".ui.NewAccountActivity"
            android:theme="@style/Theme.Sherlock.NoActionBar" >
        </activity>
        
        <activity android:name=".ui.CreatePostActivity"
            android:label="@string/add_label"
            android:theme="@style/Theme.Sherlock.Dialog">
        </activity>
        
        <activity android:name=".ui.CreateCommentActivity"
            android:label="@string/add_label"            
            android:theme="@style/Theme.Sherlock.Dialog">
        </activity>
        
        <activity android:name=".ui.AboutActivity"
            android:label="@string/about_label"
			      android:theme="@style/Theme.Sherlock.Dialog">
        </activity>
        
        <activity android:name=".ui.ViewPostActivity">
        </activity>
        
    </application>

</manifest>
